<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zippler.cn.xs.activity.RecordActivity">

    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:contentDescription="@string/app_english" />

        <ImageView
            android:id="@+id/exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_capture_light"
            android:contentDescription="@string/app_english"/>

        <ImageView
            android:id="@+id/camera_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/exposure"
            android:layout_marginStart="65dp"
            android:src="@mipmap/fresh"
            android:contentDescription="@string/app_english"/>


        <TextView
            android:id="@+id/next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/pink_disable_background"
            android:layout_marginEnd="10dp"
            android:text="@string/next_step"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

   <ImageView
       android:id="@+id/record_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:src="@mipmap/record"
       android:contentDescription="@string/app_english"/>

</RelativeLayout>
